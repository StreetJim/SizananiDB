@model CreateContractorViewModel

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <form asp-action="Create" method="post">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create Contractor</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="input-group input-group-sm mb-3">
                    <div class="input-group-prepend">
                        <label class="input-group-text" asp-for="Name"></label>
                    </div>
                    <input class="form-control" asp-for="Name">
                </div>
                <div class="input-group input-group-sm mb-3">
                    <div class="input-group-prepend">
                        <label class="input-group-text" asp-for="Email"></label>
                    </div>
                    <input class="form-control" asp-for="Email">
                </div>
                <div class="input-group input-group-sm mb-3">
                    <div class="input-group-prepend">
                        <label class="input-group-text" asp-for="PhoneNumber"></label>
                    </div>
                    <input class="form-control" asp-for="PhoneNumber">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
        </form>
    </div>
</div>